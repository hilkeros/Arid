<%= title 'Login' %>
	<% form_for :user_session, :url => user_session_path do |form| %>
	<fieldset class="first">
		<p>
			<%= form.label :email %>
			<%= form.text_field :email, :class => "input_text" %>
		</p>
		
		<p>
			<%= form.label :password %>
			<%= form.password_field :password, :class => "input_text" %>
		</p>
	</fieldset>
	
	<fieldset class="submit">
		<%= form.submit 'Login', :class => "input_submit"%>
	</fieldset>
<% end %>

<ul class="button_list clearfix">
	<li><%= link_to('forgot password', new_password_reset_path ) %></li>
</ul>
