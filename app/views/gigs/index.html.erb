<%= title t('gigs.calendar') %>

<h2><%= t('gigs.futur') %></h2>
<table>
	<tbody>
		<% @gigs.each do |gig| %>
		<tr>
			<td width="85px"><%= link_to gig.date.strftime('%d-%m-%Y'), gig_path(gig) %></td>
			<td><%= link_to gig.venue, gig.venue_url %></td>
			<td><%= gig_ticket_link(gig) %></td>
			<td><%= gig.city %></td>
			<td><%= gig.country %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<h2><%= t('gigs.past') %></h2>
<table>
	<tbody>
		<% @past_gigs.each do |gig| %>
		<tr>
			<td width="85px"><%= link_to gig.date.strftime('%d-%m-%Y'), gig_path(gig) %></td>
			<td><%= link_to gig.venue, gig.venue_url %></td>
			<td><%= gig.city %></td>
			<td><%= gig.country %></td>
			<td><%= link_to t('gigs.details'), gig_path(gig) %></td>
		</tr>
		<% end %>
	</tbody>
</table>