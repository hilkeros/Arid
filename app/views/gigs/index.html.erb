<%= title t('gigs.calendar') %>

<h2><%= t('gigs.futur') %></h2>
<table>
	<tbody>
		<% @gigs.each do |gig| %>
		<tr>
			<td width="85px"><%= link_to gig.date.strftime('%d-%m-%Y'), gig_path(gig) %></td>
			<td><%= link_to gig.venue, gig.venue_url %></td>
			<td><%= gig_ticket_link(gig) %></td>
			<td><%= gig.city %></td>
			<td><%= gig.country %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<h2><%= t('gigs.past') %></h2>
<table>
	<tbody>
		<% @past_gigs.each do |gig| %>
		<tr>
			<td width="85px"><%= link_to gig.date.strftime('%d-%m-%Y'), gig_path(gig) %></td>
			<td><%= link_to gig.venue, gig.venue_url %></td>
			<td class="tourdate-media">
				<%= raw link_to "#{gig.comments.size} <span>Comments</span>", [gig], :class => "tourdate-comments" %>
				<%= raw link_to "#{gig.photos.size} <span>Photos</span>", [gig], :class => "tourdate-photos" %>
			</td>
			<td><%= gig.city %></td>
			<td><%= gig.country %></td>
		</tr>
		<% end %>
	</tbody>
</table>