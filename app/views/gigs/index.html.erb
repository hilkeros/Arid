<%= title "Tour Calendar" %>

<table>
	<tbody>
		<% upcoming_gigs.each do |gig| %>
		<tr>
			<td width="85px"><%= link_to gig.date.strftime('%d-%m-%Y'), gig_path(gig) %></td>
			<td><%= link_to gig.venue, gig.venue_url %></td>
			<td><%= gig_ticket_link(gig) %></td>
			<td><%= gig.city %></td>
			<td><%= gig.country %></td>
		</tr>
		<% end %>
	</tbody>
</table>