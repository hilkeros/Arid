<p class="go-back"><%= link_to "#{t('gigs.back')}", [:gigs] %></p>
        
<%= title "#{@gig.venue.titleize}" %>
  <div id="tourdate-detail" class="box clearfix">
	<dl>
		<dt><%= t('gigs.date') %>:</dt>
		<dd><%= @gig.date.strftime('%d-%m-%Y') %> </dd>
		<dt><%= t('gigs.time') %>:</dt>
		<dd><%= @gig.time.strftime('%H:%M') %> </dd>
		<dt><%= t('gigs.venue') %>:</dt>
		<dd><%= link_to @gig.venue, @gig.venue_url %> (<%= gig_ticket_link(@gig) %>)</dd>
		<dt><%= t('gigs.city') %>:</dt>
		<dd><%= @gig.city %> </dd>
		<dt><%= t('gigs.country') %>:</dt>
		<dd><%= @gig.country %> </dd>
	</dl>
</div>
<div id="concert-media" class="clearfix"> 
	<%= render :partial => 'photos' if @gig.date.past? %>
</div>
<div id="comments">
	<%= render :partial => 'comments' %>
</div>
