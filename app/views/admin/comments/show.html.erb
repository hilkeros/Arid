<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', admin_comments_path  %></li>
      <li class="active"><%= link_to 'Show', admin_comment_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">
    <div class="inner">

			<p>
				<b>Body:</b>
				<%= @comment.body %>
			</p>
			
			<p>
        <b>Type:</b>
        <%= @comment.source %>: 
        <%= @comment.post.title if @comment.post.present? %>
			  <%= @comment.gig.title if @comment.gig.present? %>
			  <%= @comment.photo.image_file_name if @comment.photo.present? %>
      </p>

			<p>
				<b>User:</b>
				<%= @comment.user.name %>
			</p>
      <%= link_to 'Destroy', admin_comment_path(@comment), :method => :delete, :confirm => 'Are you sure?' %>
    </div>
  </div>
</div>
