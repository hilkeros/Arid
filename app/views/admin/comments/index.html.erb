<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', admin_comments_path %></li>
      <li><%= link_to 'New', new_admin_comment_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Comments</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
										<th>Post_id</th>
					          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @comments.each do |comment| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= comment.id %>
          </td>
										<td>
						<%= link_to comment.post_id, admin_comment_path(comment) %>
					</td>
										<td>
            <%= comment.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', admin_comment_path(comment) %> |
            <%= link_to 'edit', edit_admin_comment_path(comment) %> |
            <%= link_to 'destroy', admin_comment_path(comment), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>