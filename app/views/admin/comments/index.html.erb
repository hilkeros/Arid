<h1>Admin Comments</h1>

<table>
	<tr>
		<td>Username</td>
		<td>Comment</td>
		<td>Actions</td>
	</tr>
	<% @comments.each do |comment| %>
		<tr>
			<td><%= comment.user.name if comment.user.present?  %></td>
			<td><%= comment.body %></td>
			<td><%= link_to 'delete', admin_comment_path(comment), :method => 'delete', :confirm => "Sure you want to delete this comment?" %></td>
		</tr>
	<% end %>
</table>