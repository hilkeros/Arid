<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', admin_photos_path %></li>
      <li><%= link_to 'New', new_admin_photo_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">Arid Photos</h2>
    <div class="inner">
			<%- @photos.each do |photo| -%>
			<div style="float:left">
				<div class="lightbox"><%= link_to "#{image_tag(photo.image.url(:small))}", photo.image.url(:large) %> </div>
				<%= link_to 'Details', [:admin, photo] %>
			</div>
			<% end %>
    </div>
		
		<h2 class="title" style='clear:both;'>All Photos</h2>
    <div class="inner">
			<%- @user_photos.each do |photo| -%>
			<div style="float:left">
				<div class="lightbox"><%= link_to "#{image_tag(photo.image.url(:thumb))}", photo.image.url(:large) %> </div>
				<%= link_to 'Details', [:admin, photo] %>
			</div>
			<% end %>
    </div>
			<div style='clear:both;'></div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>