<table class="table">
	<tr>             
		<th class="first">ID</th>
		<th>User</th>
		<th>Products</th>
		<th>Price</th>
		<th>Payment code</th>
		<th>Created at</th>
		<th class="last">&nbsp;</th>
	</tr>
	<% orders.each do |order| -%>
	<tr class="<%= cycle("odd", "even") %>">
		<td><%= link_to order.id, admin_order_path(order) %></td>
		<td><%= order.user.name %></td>
		<td><%= order.products.size %></td>
		<td>&euro;<%= order.total_price %></td>
		<td><%= order.payment_code %></td>
		<td><%= order.created_at %></td>
		<td class="last">
			<%= link_to 'show', admin_order_path(order) %>
		</td>
	</tr>          
	<% end -%>
</table>