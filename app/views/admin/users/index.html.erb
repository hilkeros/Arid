<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', admin_users_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Users</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
					<th>Name</th>
					<th>Email</th>
					<th>Created at</th>
					<th>Admin</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @users.each do |user| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td><%= user.id %></td>
					<td><%= link_to user.name, admin_user_path(user) %></td>
					<td><%= user.email %>
					<td><%= user.created_at %></td>
					<td><%= user.admin ? "yes" : "no" %></td>
          <td class="last">
            <%= link_to 'edit', edit_admin_user_path(user) %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>