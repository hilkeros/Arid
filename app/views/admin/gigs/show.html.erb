<h1><%= @gig.venue %></h1>

<table>
  
  <tr>
    <td>Date:</td>          <td><%= @gig.date.strftime('%d-%m-%Y') %> </td>
  </tr>
  <tr>
    <td>Time:</td>          <td><%= @gig.time.strftime('%H:%M') %> </td>
  </tr>
  <tr>
    <td>Venue:</td>         <td><%= link_to @gig.venue_url @gig.venue_url %> </td>
  </tr>
  <tr>
    <td>Tickets:</td>       <td><%= link_to @gig.tickets_url, @gig.tickets_url %> </td>
  </tr>
  <tr>
    <td>City:</td>           <td><%= @gig.city %> </td>
  </tr>
  <tr>
    <td>Country:</td>         <td><%= @gig.country %> </td>
  </tr>

</table><br />
