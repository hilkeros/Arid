<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', admin_products_path %></li>
      <li><%= link_to 'New', new_admin_product_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title">All Products</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
										<th>Name</th>
					          <th>Created at</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @products.each do |product| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= product.id %>
          </td>
										<td>
						<%= link_to product.name, admin_product_path(product) %>
					</td>
										<td>
            <%= product.created_at %>
          </td>
          <td class="last">
            <%= link_to 'show', admin_product_path(product) %> |
            <%= link_to 'edit', edit_admin_product_path(product) %> |
            <%= link_to 'destroy', admin_product_path(product), :method => :delete, :confirm => 'Are you sure?' %>
          </td>
        </tr>          
        <% end -%>
      </table>
      <div class="actions-bar">
        <div class="actions">
        </div>
        
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>