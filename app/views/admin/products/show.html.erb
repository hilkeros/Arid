<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', admin_products_path  %></li>
      <li><%= link_to 'New', new_admin_product_path %></li>
      <li class="active"><%= link_to 'Show', admin_product_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b>Name:</b>
          <%= @product.name %>
        </p>

        <p>
          <b>Variants:</b>
          <%= @product.variants %>
        </p>

        <p>
          <b>Description:</b>
          <%= @product.description %>
        </p>
      <%= link_to 'Edit', edit_admin_product_path(@product) %>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>