<h1>Post index</h1>
<% if current_user %>
 welcome <%= current_user.name %>
<% end %>
 <p>
  <%= link_to 'add new post', new_admin_post_path %>
 </p>
<table width="100%">
	<thead>
		<tr>
			<th>Title</th>
			<th>Date</th>
			<th>Exclusive</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
	<% @posts.each do |post| %>
		<tr>
			<td><%= link_to post.title, post %></td>
			<td><%= post.created_at.to_formatted_s(:db) %></td>
			<td><%= post.exclusive ? "yes" : "no" %></td>
			<td>
				<%= link_to 'edit', edit_admin_post_path(post) %>
				<%= link_to 'delete', admin_post_path(post), :method => :delete, :confirm => "Sure you cant to delete #{post.title}"  %>
			</td>
		</tr>
	<% end %>
	</tbody>
</table>