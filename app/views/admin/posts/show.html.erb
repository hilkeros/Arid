<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', admin_posts_path  %></li>
      <li><%= link_to 'New', new_admin_post_path %></li>
      <li class="active"><%= link_to 'Show', admin_post_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b>Title:</b>
          <%= @post.title %>
        </p>

        <p>
          <b>Body:</b>
          <%= @post.body %>
        </p>

        <p>
          <b>Permalink:</b>
          <%= @post.permalink %>
        </p>

        <p>
          <b>Exclusive:</b>
          <%= @post.exclusive %>
        </p>

        <p>
          <b>Press:</b>
          <%= @post.press %>
        </p>
      <%= link_to 'Edit', edit_admin_post_path(@post) %>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>