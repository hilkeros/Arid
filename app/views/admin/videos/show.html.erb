<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', admin_videos_path  %></li>
      <li><%= link_to 'New', new_admin_video_path %></li>
      <li class="active"><%= link_to 'Show', admin_video_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b>Name:</b>
          <%= @video.name %>
        </p>
        <p>
          <object width="620" height="373">
						<param name="movie" value="http://www.youtube.com/v/<%=@video.url.split(/\=/)[1]%>"></param>
						<param name="allowFullScreen" value="true"></param>
						<param name="allowscriptaccess" value="always">
						</param><embed src="http://www.youtube.com/v/<%=@video.url.split(/\=/)[1]%>" type="application/x-shockwave-flash" allowscriptaccess="always" allowfullscreen="true" width="620" height="373"></embed>
					</object>
					<div><a href="<%= @video.url %>" target="_blank"><%= @video.url %></a></div>
        </p>
      <%= link_to 'Edit', edit_admin_video_path(@video) %>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>