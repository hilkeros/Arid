<div class="news_entry <%= "first" if post == @posts.first %>">
	<h1><%= link_to post.title, post_path(post) %></h1>
	<p class="meta clearfix">
		<span class="date"><%= post.created_at.strftime('%e %B').lstrip %></span> 
		<%= link_to(post.comments.size, post_path(post, :anchor => "comments"), :class => "jump_to_comments") %>
	</p>
	<p>
		<%- if post.exclusive && !current_user -%>
			You need to be logged in to view this post. <%= link_to t('menu.login_or_register'), login_path %>.
		<%- else -%>
			<%= raw (post.body) %>
			
			<ul class="button_list clearfix share">
				<li id="sharethis_btn"><%=  raw addthis_share_button(post_url(post)){t('posts.share')} %></li>
				<li><%= link_to t('comments.add_comment'), post_path(post, :anchor => "comments") %></a></li>
			</ul>
		<%- end -%>
	</p>
</div>