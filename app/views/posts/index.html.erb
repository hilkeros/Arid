<h1>Post index</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Date</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
	<% @posts.each do |post| %>
		<tr>
			<td><%= link_to post.title, post_path(post) %></td>
			<td><%= post.created_at %></td>
			<td>
				<%= link_to 'edit', edit_post_path(post) %>
				<%= link_to 'delete', post_path(post), :method => :delete, :confirm => "Sure you cant to delete #{post.title}"  %>
			</td>
		</tr>
	<% end %>
	</tbody>
</table>