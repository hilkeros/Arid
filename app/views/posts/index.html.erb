	
<% @posts.each do |post| %>
  <h1><%= link_to post.title, post_path(post) %></h1>

  <%= simple_format(post.body) %><br>

  <div id ="post_info">
    written on <%= post.created_at %><br>
    <%= link_to "x comments - Comment on this post", post_path(post) %><br>
    addthis_share_button
  </div>
<% end %>
	
